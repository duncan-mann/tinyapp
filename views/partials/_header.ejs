<header>
    <nav class="navbar navbar-expand-md navbar-dark bg-success">


     <!-- TINY APP LOGO/BUTTON  -->
      <a class="navbar-brand" href="/urls">TinyApp</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <!-- My URLS / Create New URL Buttons -->
      <div class="collapse navbar-collapse d-flex" id="navbarNavAltMarkup">
        <div class="navbar-nav">
          <a class="nav-item nav-link" href="/urls">My URLs</a>
          <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
        </div>
          <% if (username === undefined) { %>

      <!-- Login Form -->
      <div class = "ml-auto">
            <form method="POST" action="/login" class ="d-flex">
              <input type="text" name ="username" class = "form-control form-control-sm my-auto mx-3" placeholder="Enter Username" style="text-align: center">
              <input type="submit" class = "btn btn-outline-primary">
            </form>
      </div>
        <% } else { %>
      <div class = "ml-auto d-flex">
        <p class ="my-auto mx-3">Logged in as : <%= username %></p>
        <form method = "POST" action="/logout">
          <input type = "submit" value="Logout" class = "btn btn-outline-primary">
        </form>
      </div>
        <% } %>
      </div>
    </nav>
  </header>